<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp">

    <!-- TextView to display the budget category -->
    <TextView
        android:id="@+id/budget_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category: Example"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        tools:ignore="HardcodedText" />

    <!-- TextView to display the amount spent in the budget -->
    <TextView
        android:id="@+id/budget_spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spent: £0.00 / £0.00"
        android:textSize="18sp"
        android:textColor="#555555"
        tools:ignore="HardcodedText" />

    <!-- EditText for inputting a new budget amount -->
    <EditText
        android:id="@+id/budget_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:hint="Enter new budget"
        android:inputType="numberDecimal"
        android:padding="8dp"
        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,VisualLintTextFieldSize" />

    <!-- Button to update the budget -->
    <Button
        android:id="@+id/update_budget_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Budget"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        tools:ignore="HardcodedText,VisualLintButtonSize" />
</LinearLayout>
